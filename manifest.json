{
  "name": "Overlay Timer",
  "version": "0.0.1",
  "description": "Overlay a timer on a web page",
  "author": "Shaun Clowes",
  "manifest_version": 2,
  "short_name": "Overlay Timer",
  "permissions": ["activeTab", "storage"],
  "web_accessible_resources": [ "audio/*" ],
  "optional_permissions": [],
  "options_page": "/html/options.html",
  "browser_action": {
    "default_title": "Overlay Timer",
    "default_popup": "/html/timer_starter.html"
  },
  "background": {
    "scripts": ["/js/files.js", "/js/audio_background.js"]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "mac": "MacCtrl+Shift+C",
        "windows": "Ctrl+Shift+C"
      }
    }
  }
}
